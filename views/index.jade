extends layout

block content
  h1.text-center
  form.form-signin(method='POST' action='/users/login')
    #error
     if error  
      p.text-danger ERROR !!
    h1.h3.mb-3.font-weight-normal Please sign in
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email' name='username' placeholder='Email address' required='required' autofocus='autofocus')
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password' name='password' placeholder='Password' required='required')
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    p.mt-5.mb-3.text-muted &copy; 2020
